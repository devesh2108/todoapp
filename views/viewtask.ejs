<html>
  <head>
    <title>
      ToDo app
    </title>
    <link rel='stylesheet' href='../bootstrap/dist/css/bootstrap.min.css'>
    <link rel='stylesheet' href='../stylesheets/style.css'>
  </head>
  <body>

    <header class="jumbotron">
        <div class="container">
            <div class="row row-header">
                <div class="col-12 col-sm-6 offset-sm-3 ">
                    <h1>To-Do App</h1>
                </div>
                <div class="col-12 col-sm-2 offset-sm-1 align-self-center">
                    <form action='/logout' method='GET'>
                        <button class="btn btn-secondary btn-sm btn-block nav-link">Logout</button>                
                    </form>
                </div>
            </div>
        </div>
    </header>

    <div class='container-fluid'>
       <h2></h2> 
       <div class='row'>
        <div class="col-12 col-sm-2 offset-sm-1 row-content mt-5">
            <form action='/users/' method='GET'>
                <button class='btn btn-primary form-control'>Add Task</button>
            </form>
        </div>  
        <div class="col-12 col-sm-8  row-content mt-5">
                <div class="table-responsive">
                    <%for(i=0;i<task.length;i++) {%>
                        <table class="table table-striped table-bordered">
                            <tbody>
                                <tr>
                                    <th><%=task[i].task%></th>
                                    <td><%=task[i].date%></td>
                                    <td>
                                        <form action='/users/complete' method='GET'>
                                            <input type='hidden' name='task' value='<%=task[i].task %>'>
                                            <input type='hidden' name='date' value='<%=task[i].date %>'>
                                            <button class='btn btn-success'>Task Completed</button>
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <%}%>
                    </div>
            
        </div>  
    </div>
</div>
    <script src='../bootstrap/dist/js/bootstrap.min.js'></script>
  </body>
</html>
