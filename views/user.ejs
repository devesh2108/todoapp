<html>
  <head>
    <title>
      ToDo app
    </title>
    <link rel='stylesheet' href='../bootstrap/dist/css/bootstrap.min.css'>
    <link rel='stylesheet' href='../stylesheets/style.css'>
  </head>
  <body>

    <header class="jumbotron">
        <div class="container">
            <div class="row row-header">
                <div class="col-12 col-sm-6 offset-sm-3 ">
                    <h1>To-Do App</h1>
                </div>
                <div class="col-12 col-sm-2 offset-sm-1 align-self-center">
                    <form action='/logout' method='GET'>
                        <button class="btn btn-secondary btn-sm btn-block nav-link">Logout</button>                
                    </form>
                </div>
            </div>
        </div>
    </header>

    <div class='container-fluid'>
       <h2>Hello <%= myuser%></h2> 
       <center><p style='color: green'><%= print%></p></center>
       <div class='row'>
            <div class="col-12 col-sm-4 offset-sm-2 row-content" style='background-color: darkslategray'>
              <center><h4 style='padding-top: 20px; color: white'><b>Add Task </b></h4></center>
              <form method='POST' action='/users/addtask' class='has-validation'>
                <div class="form-group row">
                    <div class="col-12 col-sm-8 offset-sm-3">
                        <textarea class='form-control' name='task' row='1' placeholder="Enter Task" required></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 col-sm-5 offset-sm-3">
                        <button class='btn btn-danger'> Add </button>
                    </div>
                </div>
                </form> 
            </div>
        <div class="col-12 col-sm-2 offset-sm-1 row-content mt-5">
            <form action='/users/viewtask' method='GET'>
                <button class='btn btn-primary form-control'>View Task List</button>
            </form>
        </div>  
    </div>
</div>
    <script src='../bootstrap/dist/js/bootstrap.min.js'></script>
  </body>
</html>
